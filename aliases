# find files in parent dirs
find-up () {
  path=$(pwd)
  while [[ "$path" != "" && ! -e "$path/$1" ]]; do
    path=${path%/*}
  done
  echo "$path"
}
egiti() {
    path="$(find-up .gitignore)/.gitignore"
    vim $path
}
