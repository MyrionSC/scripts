# list, move, copy, open latest modified file / dir in current dir
lst() {
    if [ $# -eq 0 ]
    then
        ls -t | head -1
    else
        ls -t | head -$1
    fi
}
mvl () {
    if [ $# -eq 1 ]
    then
        mv -i -v $(lst) $1
    else
        mv -i -v $(lst $1) $2
    fi
}
cpl () {
    if [ $# -eq 1 ]
    then
        cp -ir $(lst) $1
    else
        cp -ir $(lst $1) $2
    fi
}
ol () {
    open $(lst)
}

