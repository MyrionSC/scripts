#====== Vim stuff
# wrapper for vim that allows to use previously captured keys by terminal like c-s for mappings
vim () {
    stty -ixon;
    command vim "$@";
    stty ixon;
}
vi () {
    stty -ixon;
    command vim "$@";
    stty ixon;
}

