# platform specific stuff
if [[ "$(uname)" == "Darwin" ]]; then # It's a Mac!
    alias dl='cd ~/Downloads'
    alias desk='cd ~/Desktop'
    alias xc='pbcopy'
    alias xpaste='pbpaste'
    export DL=~/Downloads
    export DESK=~/Desktop
elif [[ "$(uname)" == "MSYS_NT-10.0-18362" ]]; then # It's MSYS2!
    alias dl='cd /c/Users/$USER/Downloads'
    alias desk='cd /c/Users/$USER/Desktop'
    alias xc='clip'
    alias open='start'
    alias ln='echo "use cmd //c mklink"'
    export DL=/c/Users/mar/Downloads
    export DESK=/c/Users/mar/Desktop
    #alias xpaste='pbpaste' #todo: windows paste
elif [[ "$(expr substr $(uname -s) 1 5)" == "Linux" ]]; then # It's Good ol' Linux!
    if grep -q microsoft /proc/version; then # we are on WSL2
        # if not done, create symlink in ~ pointing to windows user home called 'winhome'
        alias cmd='cmd.exe'
        alias open='cmd.exe /C start'
        alias start='cmd.exe /C start'
        alias clip='clip.exe'
        alias xc='clip.exe'
        alias dl='cd ~/winhome/Downloads'
        alias desk='cd ~/winhome/Desktop'
        alias gurl="egrep -o 'https?://[^ ]+' ~/.cache/gitpush-out.txt | xargs -I {} cmd.exe /C start {} > /dev/null 2>&1"
        alias gitg='cmd.exe /C "C:\Program Files\gitg\bin\gitg.exe"' # opens gitgui in current dir
        export DL=~/winhome/Downloads
        export DESK=~/winhome/Desktop
    else # It actually is linux
        alias dl='cd ~/Downloads'
        alias desk='cd ~/Desktop'
        alias xc='xclip -selection c' # example: pwd | xc
        alias open='xdg-open'
        alias xpaste='xclip -selection clipboard -o'
        export DL=~/Downloads
        export DESK=~/Desktop
    fi
fi

