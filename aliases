mvl () {
    if [ $# -eq 1 ]
    then
        mv -i -v $(lst) $1
    else
        mv -i -v $(lst $1) $2
    fi
}
cpl () {
    if [ $# -eq 1 ]
    then
        cp -ir $(lst) $1
    else
        cp -ir $(lst $1) $2
    fi
}
