wordcount () {
    echo $1 | wc --words -
}
trspace () {
    echo "$@" | tr " " "_"
}
arrayify () {
    echo "[$@]" | tr "\n" ", " # cut off last two chars at some point
}
trupper () {
    echo "$@" | tr '[:lower:]' '[:upper:]'
}
trlower () {
    echo "$@" | tr '[:upper:]' '[:lower:]'
}

trim() {
    #local var="$*"
    read var # from pipe
    # remove leading whitespace characters
    var="${var#"${var%%[![:space:]]*}"}"
    # remove trailing whitespace characters
    var="${var%"${var##*[![:space:]]}"}"
    echo -n "$var"
}


sgrep () {
    grep -irn "$1" .
}
greps () {
    grep -irn "$1" .
}

winpath () {
    if [ $# -eq 0 ]
    then
        temppath=$(realpath .)
    else
        temppath=$(realpath $1)
    fi

    # for windows sake
    if [ $(echo $temppath | cut -c1-2) == "/c" ]
    then
        temppath="C:${temppath:2}"
        temppath=$(echo $temppath | tr '/' '\\')
    fi

    echo $temppath | tr -d "\n"
}

xp () {
    if [ $# -eq 0 ]
    then
        realpath . | tr -d "\n" | xc
    else
        realpath $1 | tr -d "\n" | xc
    fi
}


