# replace space in file names with underscore
rename_space_underscore() {
    for arg in "$@"
    do
        mv "$arg" $(echo $arg | tr " " "_")
        echo $arg renamed to: $(echo $arg | tr " " "_")
    done
}

# replace space with underscore normal input
tr_underscore(){
    echo "$@" | tr " " "_"
}

