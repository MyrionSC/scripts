#search aliases
findall () {
    find . -iname "*$1*"
}

fd () {
    find . -type d -iname "*$1*"
}
finddir () {
    find . -type d -iname "*$1*"
}

ff () {
    find . -type f -iname "*$1*"
    #rg --hidden --files -g "*$1*"
}
findfile () {
    find . -type f -iname "*$1*"
    #rg --hidden --files -g "*$1*"
}

findlib () {
    if [ $# -eq 0 ]
    then
        ldconfig -p
    else
        ldconfig -p | grep -i $1
    fi
}
# can also use locate PATTERN to find a file on the system (much faster)
findcore () { # search EVERYWHERE
    sudo find /bin /lib /lib64 /snap /usr /etc /opt /sbin /var /home -iname "*$1*"
}

