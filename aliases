# apt list "searchterm" - list all packagenames containing <searchterm>
# apt show pckgname - shows information about a package

alias ai='sudo apt-get install'
alias au='sudo apt-get update'
alias ag='sudo apt-get upgrade'
alias ar='sudo apt-get remove'
alias aar='sudo apt-get autoremove'
alias al='apt list'
alias ali='apt list --installed'
alias ase='apt search'
alias ash='apt show'

alias ni='npm install'
alias nrm='npm remove'
alias ns='npm start'
alias nr='npm run'
alias nre='npm run env'

alias open='xdg-open'
alias m='micro'
alias xc='xclip -selection c' # example: pwd | xc
alias pc='pwd | xc'
alias cmux='sudo chmod u+x'
alias rsy='rsync -avzP'
alias drivemount='google-drive-ocamlfuse' # first arg: mountdir
alias unmount='fusermount -u' # first arg: mountdir

alias linuxv='cat /etc/*-release'
alias gs='echo fuckoff ghostscript'

#docker
alias dock-enter='docker exec -it todo bash'

#navigation aliases
alias ca='cd ..'
alias caa='cd ../..'
alias caaa='cd ../../..'
alias caaaa='cd ../../../..'
alias caaaaa='cd ../../../../..'
alias caaaaaa='cd ../../../../../..'
alias caaaaaaa='cd ../../../../../../..'
alias cf='cd -'

alias cdf='cd $(ls -d ./*/ | head -1)' # enter first dir
alias cdl='cd $(ls -dr ./*/ | head -1)' # enter last dir

fina () {
	find . -iname *$1*
}
alias countf='find . -type f | wc -l'
alias countd='find . -maxdepth 1 -type d | wc -l'

# list latest modified file / dir in current dir
lst() {
	if [ $# -eq 0 ] 
	then
		ls -t | head -1
	else
		ls -t | head -$1
	fi
}

alias fori="for ((I=0;;I++)) do"


finddir () {
	find . -type d -iname *$1*
}

findfile () {
	find . -type f -iname *$1*
}





als () {
	cat ~/bin/aliases
}

if [ -f ~/bin/git_aliases ]; then
    . ~/bin/git_aliases
    gitals () {
    	cat ~/bin/git_aliases
    }
fi





dragon-say () {
	echo $1 | cowsay -e OO -f dragon-and-cow
}


export VISUAL=vim
export EDITOR="$VISUAL"

shopt -s globstar

#fasd init. Try different setups from "man fasd"
eval "$(fasd --init auto)"
alias v='f -e vim' # quick opening files with vim
alias o='a -e xdg-open' # quick opening files with xdg-open

c () {
	f -e cat $1 | tr '\n' ' ' | xclip -selection c
}


