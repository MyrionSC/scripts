cdd() { # try to cd to a dir match
    DIRS=$(find . -type d -iname "*$1*")
    NUM=$(echo -n "$DIRS" | grep -c '^')
    if [ $NUM -eq 0 ]; then
        echo did not match any dirs
    elif [ $NUM -eq 1 ]; then
        cd $DIRS
    else
        echo Matched more than one dir:
        for dir in $DIRS
        do
            echo $dir
        done
    fi
}
alias cfd='cdd'
finddir () {
    find . -type d -iname "*$1*"
}

